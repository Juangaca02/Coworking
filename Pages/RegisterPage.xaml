<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TFG.Pages.RegisterPage"
             Title="RegisterPage">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Usuario" FontSize="Medium"/>
        <Entry x:Name="usuarioEntry" Placeholder="Nombre de usuario"/>

        <Label Text="Email" FontSize="Medium"/>
        <Entry x:Name="emailEntry" Placeholder="Gmail" />

        <Label Text="Contraseña" FontSize="Medium"/>
        <Entry x:Name="contraseñaEntry" Placeholder="Contraseña" IsPassword="True"/>

        <Label Text="Confirmar Contraseña" FontSize="Medium"/>
        <Entry x:Name="confirmarContraseñaEntry" Placeholder="Confirmar Contraseña" IsPassword="True"/>

        <Button Text="Registrar" Clicked="Registrar_Clicked"  BackgroundColor="#4CAF50" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>