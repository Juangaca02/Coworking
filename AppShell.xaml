<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TFG"
    xmlns:pages="clr-namespace:TFG.Pages"
    x:Class="TFG.AppShell">

    <!-- Menú de Hamburguesa -->
    <FlyoutItem Title="Menu" Icon="hamburger_icon.png">
        <Tab>
            <!-- Pestaña de Salas -->
            <ShellContent Title="Salas" Icon="salas_icon.png">
                <views:MainPage />
            </ShellContent>

            <!-- Pestaña de Historial -->
            <ShellContent Title="Historial" Icon="historial_icon.png">
                <pages:HistorialPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>

</Shell>
